<%- include('partials/header.ejs') %>
<link rel="stylesheet" href="/css/create-user.css">
</head>
<body>

    <%- include('partials/navigation.ejs') %>
<main>
    <form action="/users/<%= edit ? 'edit' : 'add' %>" method="POST" class="users-form">
        <h3 class="users-form__head"><%= edit ? 'Update' : 'Create' %> User</h3>
        <div class="form-control">
            <label for="n">Name</label>
        <input type="text" name="name" id="n" value="<%= edit ? user.name : '' %>"required>
        <label for="a">age</label>
        <input type="number" name="age" id="a" value="<%= edit ? user.age : '' %>"required> 
        <input type="hidden" name="id" value="<%= user.id %>">
        </div>          
        <button type="submit"><%= edit ? 'Update' : 'Create' %></button>
    </form>
</main>

    <%- include('partials/footer.ejs') %>